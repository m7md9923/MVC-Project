@model RegisterViewModel    
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

<!-- main -->
<div class="main-w3layouts wrapper" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
    <h1>Creative SignUp Form</h1>
    <div class="main-agileinfo">
        <div class="agileits-top">
            <form asp-action="Register" asp-controller="Account" method="post" >
                
                <div asp-validation-summary="ModelOnly" class = "text-danger"></div>
                <input asp-for="UserName" placeholder="UserName">
                <span asp-validation-for="UserName" class="text-danger"></span>
                <br/>

                <input asp-for="FirstName" placeholder="FirstName">
                <span asp-validation-for="FirstName" class="text-danger"></span>
                <br/>

                <input asp-for="LastName" placeholder="LastName">
                <span asp-validation-for="LastName" class="text-danger"></span>
                <br/>

                <input asp-for="Email" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
                <br/>

                <input asp-for="Password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
                <br/>

                <input asp-for="ConfirmPassword" placeholder="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <br/>


                <div class="wthree-text">
                    <label class="anim">
                        <input asp-for="IsAgreed" class="checkbox" required="">
                        <span>I Agree To The Terms & Conditions</span>
                    </label>
                    <div class="clear"> </div>
                </div>
                <input type="submit" value="SIGNUP">
            </form>
            <p>Do have an Account? <a asp-action="Login"> Login Now!</a></p>
        </div>
    </div>
    <!-- copyright -->
    <div class="colorlibcopy-agile">
        <p>© 2018 Colorlib Signup Form. All rights reserved | Design by <a href="https://colorlib.com/" target="_blank">Colorlib</a></p>
    </div>
    <!-- //copyright -->
    <ul class="colorlib-bubbles">
        <li></li>
